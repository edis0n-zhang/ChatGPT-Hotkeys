{
  "manifest_version": 2,
  "name": "ChatGPT Shortcuts",
  "version": "1.0",
  "description": "Opens OpenAI Chat with a hotkey.",
  "permissions": ["commands", "activeTab"],
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  },
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": ["https://chat.openai.com/*"],
      "js": ["content.js"]
    }
  ],
  "commands": {
    "open_chatgpt": {
      "suggested_key": {
        "default": "Ctrl+Shift+O",
        "mac": "Command+Shift+O"
      },
      "description": "New ChatGPT Tab"
    },
    "focus_new_prompt": {
      "suggested_key": {
        "default": "Ctrl+Shift+L",
        "mac": "Command+Shift+L"
      },
      "description": "Focus on the new prompt area"
    }
  }
}
